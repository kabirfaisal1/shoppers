    <body>

        <header>
            <nav class="navbar navbar-expand-lg navbar-dark"
                id="header_navbar">
                <button class="navbar-toggler" type="button"
                    data-toggle="collapse"
                    data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse"
                    id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/Home">Home</a>
                            <!--is link to search-engine-optimization on the body-->
                        </li>
                        <li class="nav-item active">
                            <!-- If the user is logged in, show a logout button -->
                            {{#if loggedIn}}
                            <button id="logout" class="btn-no-style">Logout</button>
                            {{else}}
                            <!-- Otherwise, show a link to login -->
                            <a class="nav-link" href="/login">Login</a>
                            {{/if}}
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <main>
            <div class="container mt-4" id="mainContainer">
                <div class="container mt-4" id="searchContainer"
                    data-aos="flip-right">
                    <div class="card-header" id="cardHeader">
                        <h3 id="myExperience">Search</h3>
                    </div>
                    <div>
                        <form class="mb-4">
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="mb-3">
                                        <label for="inputName"
                                            id="itemSearch"
                                            class="form-lable"
                                            aria-required="true">Item Search</label>
                                        <input placeholder="What is the item
                                            you want us to look for"
                                            id="inputName" type="text"
                                            class="form-control">
                                    </div>
                                </div>
                            </div>  
                            <div class="container mt-4" id="searchContainer">
                            <form class="mb-4">
                                <div class="row">
                                    <div class="col-12 col-md-6">
                                        <div class="mb-3">
                                            <label for="inputName"
                                                id="locations"
                                                class="form-lable"
                                                aria-required="true">Target</label>
                                            <input
                                                id="inputName" type="radio"
                                                class="form-control">
                                        </div>
                                        <div class="mb-3">
                                            <label for="inputName"
                                                id="locations"
                                                class="form-lable"
                                                aria-required="true">Walmart</label>
                                            <input
                                                id="inputName" type="radio"
                                                class="form-control">
                                        </div>
                                        <div class="mb-3">
                                            <label for="inputName"
                                                id="locations"
                                                class="form-lable"
                                                aria-required="true">Both</label>
                                            <input
                                                id="inputName" type="radio"
                                                class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div>
                                <button class="btn btn-outline-success my-2
                                    my-sm-0"
                                    id="btnSubmit" type="submit">Submit</button>
                            </div>

                        </form>

                    </div>

                </div>
            </div>

             <div class="container mt-4" id="search" data-aos="zoom-in-up">
                 <div class="card-header" id="cardHeader">
                    <h3 id="results-Title">This is what we found</h3>
                </div>
                <div class="card-body" id="fullResults">
                    <div class="row">
                        {{{searchresults}}}

                    </div>
                </div>



             </div>

            </main>


        </body>
    </html>