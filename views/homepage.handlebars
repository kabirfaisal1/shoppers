<div class="container mt-4" id="mainContainer">
    <div class="container mt-4" id="searchContainer" data-aos="flip-right">
        <div class="card-header" id="cardHeader">
            <h3 id="myExperience">Search</h3>
        </div>
        <div>
            <form class="mb-4">
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="input-group input-group-lg">
                            
                            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg" placeholder="Lets find the product">
                          </div>
                    </div>
                </div>
               <div class="container mt-4" id="searchContainer">
                    <form class="mb-4">
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="form-check">
                                    <input id="inputName" type="radio" value="Target" class="form-check-input">
                                    <label for="target" id="storeOpt" class="form-check-label"
                                        aria-required="true">Target</label>
                                   
                                </div>
                                <div class="form-check">
                                    <input id="inputName" type="radio" value="Walmart" class="form-check-input">
                                    <label for="walmart" id="storeOpt" class="form-check-label"
                                        aria-required="true">Walmart</label>
                                    
                                </div>
                                <div class="form-check">
                                    <input id="inputName" type="radio" value="Both" class="form-check-input">
                                    <label for="both" id="storeOpt" class="form-check-label"
                                        aria-required="true">Both</label>
                                    
                                </div>
                            </div>
                        </div>
                    </form>
                    <div>
                        <button class="btn btn-outline-success
                                    my-2
                                    my-sm-0" id="btnSubmit" type="submit">Submit</button>
                    </div>
                </div>

            </form>

        </div>

    </div>
</div>
{{#if loggedIn}}
<!-- ADDING JUST TO TEST HOME ROUTES -->
<div class="container">
    <div class="card">
        <h5 class="card-header">Logged in user data and user's past searches</h5>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <p>user id: {{loggedInUser.id}}</p>
            </li>
            <li class="list-group-item">
                <p>user name: {{loggedInUser.username}}</p>
            </li>
            <li class="list-group-item">
                <p>user email: {{loggedInUser.email}}</p>
            </li>
            {{#if loggedInUser.searches.length}}
                {{#each loggedInUser.searches as |search|}}
                <li class="list-group-item">
                    <p>search id: {{search.id}}, product name: {{search.product_name}}</p>
                </li>
                {{/each}}
            {{/if}}
        </ul>
    </div>
</div>
{{/if}}
